{
  "name": "@eik/service",
  "version": "5.1.3",
  "description": "Eik REST API as a standalone HTTP service",
  "type": "module",
  "main": "./lib/main.js",
  "types": "./types/main.d.ts",
  "bin": {
    "eik-server": "bin/eik-server.js",
    "eik-service": "bin/eik-server.js",
    "service": "bin/eik-server.js"
  },
  "engines": {
    "node": ">=20.5.0"
  },
  "scripts": {
    "clean": "rimraf .tap node_modules types",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "node ./bin/eik-server.js | pino-pretty",
    "test": "cross-env LOG_LEVEL=fatal npm run test:tap",
    "test:ci": "cross-env LOG_LEVEL=trace npm run test:tap",
    "test:snapshots": "cross-env LOG_LEVEL=fatal npm run test:tap -- --snapshot",
    "test:tap": "tap ./test/**/*.test.js --disable-coverage --allow-empty-coverage",
    "types": "run-s types:module types:test",
    "types:module": "tsc",
    "types:test": "tsc --project tsconfig.test.json"
  },
  "files": [
    "CHANGELOG.md",
    "package.json",
    "lib",
    "bin",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:eik-lib/service.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eik-lib/service/issues"
  },
  "homepage": "https://github.com/eik-lib/service#readme",
  "dependencies": {
    "@eik/core": "2.1.2",
    "@eik/sink": "1.2.5",
    "@eik/sink-file-system": "2.0.13",
    "@eik/sink-memory": "2.0.12",
    "@fastify/compress": "8.3.0",
    "@fastify/cors": "10.1.0",
    "@fastify/jwt": "10.0.0",
    "convict": "6.2.4",
    "fastify": "5.6.1",
    "http-errors": "2.0.0",
    "js-yaml": "4.1.1",
    "pino": "10.1.0"
  },
  "devDependencies": {
    "@eik/eslint-config": "1.0.23",
    "@eik/prettier-config": "1.0.1",
    "@eik/semantic-release-config": "1.0.9",
    "@eik/typescript-config": "1.0.0",
    "@types/readable-stream": "4.0.22",
    "cross-env": "7.0.3",
    "eslint": "9.16.0",
    "form-data": "4.0.4",
    "node-fetch": "3.3.2",
    "npm-run-all2": "7.0.2",
    "pino-pretty": "10.3.1",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "semantic-release": "24.2.9",
    "tap": "21.0.1",
    "typescript": "5.6.3",
    "unique-slug": "5.0.0"
  }
}
